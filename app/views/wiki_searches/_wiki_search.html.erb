<div class="wiki-search">
  <label class="wiki-search-title"><%= wiki_search.start_title %></label>
  <i class="fa fa-long-arrow-right"></i>
  <label class="wiki-search-title"><%= wiki_search.goal_title %></label>
  <div class="wiki-search-content">
    <hr>
    <div class="wiki-search-steps">
      <% wiki_search.steps.each do |s| %>
        <%= s %>
        <% if s != wiki_search.steps.last %>
          <i class="fa fa-angle-right"></i>
        <% end %>
      <% end %>
    </div>
    <div class="wiki-search-delete">
      <%= link_to "Delete", wiki_search_path(wiki_search.id), method: :delete, data: {confirm: "Are you sure you want to delete this search?"} %>
    </div>
  </div>
</div>










