<div class="wiki-search">
  <label class="wiki-search-title"><%= wiki_search.start_title.gsub('_', ' ') %></label>
  <i class="fa fa-long-arrow-right"></i>
  <label class="wiki-search-title"><%= wiki_search.goal_title.gsub('_', ' ') %></label>
  <div class="wiki-search-content">
    <hr>
    <div class="wiki-search-steps">
      <% wiki_search.steps.each do |s| %>
        <%= s.gsub('_', ' ') %>
        <% if s != wiki_search.steps.last %>
          <i class="fa fa-angle-right" style="color:red"></i>
        <% end %>
      <% end %>
    </div>
    <%= link_to "Delete", wiki_search_path(wiki_search.id), method: :delete, data: {confirm: "Are you sure you want to delete this search?"}, class: "button" %>
  </div>
</div>
